#!/usr/bin/perl -w
use strict;
use Getopt::Long;
use POSIX 'strftime';
use Time::Local 'timegm';
Getopt::Long::Configure('bundling');

my %type = (
    '03' => 'Vernal',
    '06' => 'Summer',
    '09' => 'Autumnal',
    '12' => 'Winter',
);

my ( $since, $until, $last, $next, $year );

die unless GetOptions(
    'since'  => \$since,
    'until'  => \$until,
    'last:i' => \$last,
    'next:i' => \$next,
    'year:i' => \$year,
);

for ( \$last, \$next, \$year ) {
    $$_ = 1 if defined $$_ and 0 == $$_;
}

# Default to --since.
$since |= not ( $until or $last or $next or $year );

my $now = time;

if ( $since or $last ) {
    my ( $event, $type );
    EVENT: while (<DATA>) {
        chomp;
        my @when = /(\d+)-(\d+)-(\d+)T(\d+):(\d+)Z/;
        my $when = timegm 0, $when[4], $when[3], $when[2], $when[1]-1, $when[0];
        last EVENT if $when > $now;
        $event = $when;
        $type = $type{$when[1]};
    }
    printf "%s +%d\n", $type, ($now - $event)/86_400 if $since;
    print strftime("$type: %F %H%M%z (%a)\n", localtime $event) if $last;
}

# Below here, ISO8601 times for solstices and equinoxes for 2004-2017, in time
# order, pulled from http://en.wikipedia.org/wiki/Solstice
